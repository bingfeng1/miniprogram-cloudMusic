.tabs{
  display: flex;
  justify-content: space-around;
  text-align: center;
  margin-top: 20rpx;
}

/* 单个占满 */
.tab{
  flex-shrink: 1;
}

/* 阿里图标大小 */
.iconfont{
  font-size: 60rpx;
  border-radius: 50%;
  border: 3px solid;
  width: 90rpx;
  height: 90rpx;
  background-color: red;
  color: white;
}

/* 导航栏文字大小 */
.text{
  font-size: 24rpx;
  color: black;
}