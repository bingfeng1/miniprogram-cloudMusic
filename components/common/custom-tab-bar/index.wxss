/* components/custom-tab-bar/index.wxss */
/* tablist样式 */
.tabs{
  display: flex;
  justify-content: space-around;
  text-align: center;
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 119rpx;
  border-top: 1rpx solid rgb(255, 150, 150);
  background-color: rgba(255,255,255,.85);
}

/* 单个占满 */
.tab{
  flex-shrink: 1;
  width: 100%;
}

/* 阿里图标大小 */
.iconfont{
  font-size: 50rpx;
  padding-top: 10rpx;
}

/* 导航栏文字大小 */
.text{
  font-size: 24rpx;
  margin-top: -10rpx;
}

.checked{
  color:red;
}