/* 每个区域块的内容 */
.flex {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-around;
  font-size: 30rpx;
}

.item{
  margin-bottom: 40rpx;
}

.flex>.item image {
  border-radius: 10rpx;
  background:black;
}

.item-title {
  font-size: 24rpx;
}

.item-name {
  font-size: 22rpx;
  color: rgb(189, 189, 189);
}